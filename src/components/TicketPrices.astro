---
import { Button } from "./ui/button";
import { Card } from "./ui/card";
import { Check, Users } from "lucide-react";

interface TicketTier {
  name: string;
  ageRange: string;
  dayPass?: number;
  seasonPass?: number;
  featured?: boolean;
}

// Ticket pricing data
const ticketTiers = [
  {
    name: "Child",
    ageRange: "Ages 5 and Under",
  },
  {
    name: "Student",
    ageRange: "Ages 6-17",
    dayPass: 10.0,
    seasonPass: 20.0,
    featured: true,
  },
  {
    name: "Adult",
    ageRange: "Ages 18 and Up",
    dayPass: 15.0,
    seasonPass: 30.0,
  },
];
---

<section
  id="tickets"
  class="w-full py-12 md:py-24 bg-radial from-amber-400 to-amber-700"
>
  <div class="container px-4 md:px-6 mx-auto">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center animate-on-scroll"
    >
      <div class="space-y-2">
        <h2
          class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-white"
        >
          Ticket Pricing
        </h2>
        <p
          class="max-w-[900px] text-muted md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          Choose the perfect ticket option for you and your family
        </p>
      </div>
    </div>

    <div class="mt-12 grid gap-6 grid-cols-1 lg:grid-cols-3 staggered-list">
      {
        ticketTiers.map((tier) => (
          <div
            class={`relative ${tier.featured ? "md:-mt-4 md:-mb-4 z-10" : ""} stagger-item`}
          >
            <Card
              className={`overflow-hidden bg-gradient-to-r from-stone-900 via-stone-700 to-stone-900 h-full flex flex-col ${tier.featured ? "border-2 border-stone-300 shadow-lg" : "border border-stone-300"} rounded-lg`}
            >
              <div class={`p-6 text-center border-b border-stone-300`}>
                <h3 class={`text-2xl lg:text-3xl font-bold text-white`}>
                  {tier.name}
                </h3>
                <p class="text-sm lg:text-lg text-stone-400 mt-1">
                  {tier.ageRange}
                </p>
              </div>

              {tier.dayPass != null ? (
                <div class="p-6 flex-grow">
                  <div class="flex justify-between items-center">
                    <div>
                      <p class="text-sm font-medium text-stone-300">Day Pass</p>
                      <p class="text-3xl font-bold text-white">
                        ${tier.dayPass.toFixed(2)}
                      </p>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-stone-300">
                        Season Pass
                      </p>
                      <p class="text-3xl font-bold text-white">
                        ${tier.seasonPass.toFixed(2)}
                      </p>
                    </div>
                  </div>
                </div>
              ) : (
                <div class="p-6 flex-grow">
                  <div class="flex justify-center items-center border-stone-500">
                    <Users className="h-12 w-12 text-stone-500" />
                    <p class="text-sm font-medium text-stone-300 ml-2">
                      Free for ages 5 and under
                    </p>
                  </div>
                </div>
              )}

              <div class="p-6 pt-0 mt-auto">
                <div class="grid gap-3">
                  <Button variant="secondary" className="w-full">
                    Ticket Presale Starts June 2025
                  </Button>
                </div>
                <p class="text-xs text-center text-stone-400 mt-4">
                  Prices shown are in USD. Additional fees may apply.
                </p>
              </div>
            </Card>
          </div>
        ))
      }
    </div>
  </div>
</section>
