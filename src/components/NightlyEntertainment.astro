import { Button } from "./ui/button";
import { ChevronRight } from "lucide-react";
const entertainment = [
  {
    image: "https://placehold.co/192x192",
    width: 192,
    height: 192,
    artist: "Tasha Cobbs Leonard",
    date: "Tuesday, July 8",
  },
  {
    image: "https://placehold.co/192x192",
    width: 192,
    height: 192,
    artist: "Tatanka Means",
    date: "Thursday, July 10",
  },
  {
    image: "https://placehold.co/192x192",
    width: 192,
    height: 192,
    artist: "Indigenous",
    date: "Thursday, July 10",
  },
  {
    image: "https://placehold.co/192x192",
    width: 192,
    height: 192,
    artist: "Chapel Hart",
    date: "Friday, July 11",
  },
  {
    image: "https://placehold.co/192x192",
    width: 192,
