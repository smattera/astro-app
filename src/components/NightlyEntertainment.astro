---
import { Button } from "./ui/button";
import { ChevronRight } from "lucide-react";
import { entertainment } from "../data/NightlyEntertainment.js";
---

<section id="speakers" class="bg-radial w-full from-emerald-500 to-emerald-800">
  <div class="bg-circle-pulse py-12 md:py-24">
    <div class="container mx-auto px-4 md:px-6">
      <div
        class="flex flex-col items-center justify-center space-y-4 text-center"
      >
        <div class="space-y-2">
          <h2
            class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
          >
            Live Entertainment
          </h2>
          <p
            class="text-muted max-w-[900px] md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            Join us for our nightly entertainment featuring a variety of artists
            and performers.
          </p>
        </div>
      </div>
      <div
        class="mx-auto grid max-w-5xl gap-8 py-12 sm:grid-cols-2 md:grid-cols-3"
      >
        {
          entertainment.map((i) => (
            <div class="flex flex-col items-center space-y-4 rounded-lg bg-black/50 p-4">
              <div class="relative h-48 w-48 overflow-hidden rounded-full">
                <img
                  src={`/astro-app/entertainment/${i.image}.webp`}
                  width={1600}
                  height={900}
                  alt={i.artist}
                />
              </div>
              <div class="text-center">
                <h3 class="text-xl font-bold text-white">{i.artist}</h3>
                <p class="text-muted text-sm">{i.date}</p>
              </div>
            </div>
          ))
        }
      </div>
      <div class="text-center">
        <Button className="gap-1">
          View Full Schedule <ChevronRight className="h-4 w-4" />
        </Button>
      </div>
    </div>
  </div>
</section>
