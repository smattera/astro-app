---
import Layout from "@/layouts/main.astro";
import { entertainment } from "@/data/NightlyEntertainment";
import EventSchedule from "@/components/EventSchedule.tsx";
---

<Layout title="Home">
  <main class="flex-1">
    <section
      id="speakers"
      class="via-fair-red w-full bg-gradient-to-r from-red-700 to-red-800 py-12 md:py-24"
    >
      <div class="container mx-auto px-4 md:px-6">
        <div
          class="mx-auto grid max-w-5xl gap-8 rounded-lg py-12 sm:grid-cols-2 md:grid-cols-3"
        >
          {
            entertainment.map((i) => (
              <div class="flex flex-col items-center space-y-4 rounded-lg bg-black/50 p-4">
                <div class="relative h-48 w-48 overflow-hidden rounded-full">
                  <img
                    src={`/astro-app/entertainment/${i.image}.webp`}
                    width={1600}
                    height={900}
                    alt={i.artist}
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-xl font-bold text-white">{i.artist}</h3>
                  <p class="text-muted text-sm">{i.date}</p>
                </div>
              </div>
            ))
          }
        </div>
        <h2
          class="my-24 text-center text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Fair Schedule Coming soon
        </h2>
        <EventSchedule client:load />
      </div>
    </section>
  </main>
</Layout>
